<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvmascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/corner_radiu_cardview"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFotocv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mascota1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imghuesolike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_huesoblanco"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/tvNombrecv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre"
                    android:textSize="@dimen/nombre_cardview"

                />


            />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            <TextView
               android:id="@+id/tvLikescv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/likes"
               android:textSize="@dimen/nombre_cardview" />

            <ImageView
               android:id="@+id/huesoamarillocv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_huesoamarillo"

            />

            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>